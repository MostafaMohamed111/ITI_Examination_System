@model ITI.DAL.Entities.DomainEntities.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Delete Instructor</h2>
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this?</h3>
        <p>This will also remove their assignments to courses and branches.</p>
    </div>
    
    <div>
        <dl class="row">
            <dt class = "col-sm-2">Name</dt>
            <dd class = "col-sm-10">@Model.Name</dd>
            <dt class = "col-sm-2">Degree</dt>
            <dd class = "col-sm-10">@Model.Degree</dd>
        </dl>
        
        <form asp-action="DeleteInstructor">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Instructors" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
