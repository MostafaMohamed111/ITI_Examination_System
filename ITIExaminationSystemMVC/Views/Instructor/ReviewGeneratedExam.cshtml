@model ITIExaminationSystemMVC.Models.StudentExamViewModel

@{
    ViewData["Title"] = "Review Generated Exam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container animate-fade-in mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Exam Generated Successfully</h3>
            <span class="badge bg-light text-primary fs-6">ID: @Model.ExamId</span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <strong>Course:</strong> <span class="text-muted">@Model.CourseName</span>
                </div>
                <div class="col-md-4">
                    <strong>Duration:</strong> <span class="text-muted">@Model.DurationMinutes mins</span>
                </div>
                <div class="col-md-4">
                    <strong>Questions:</strong> <span class="text-muted">@Model.Questions.Count</span>
                </div>
            </div>

            <h5 class="border-bottom pb-2 mb-3">Questions Preview</h5>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 65%">Question</th>
                            <th style="width: 10%">Type</th>
                            <th style="width: 10%">Marks</th>
                            <th style="width: 10%">Choices</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            var q = Model.Questions[i];
                            <tr>
                                <td class="text-center fw-bold">@(i + 1)</td>
                                <td>@q.Body</td>
                                <td><span class="badge @(q.Type == "MCQ" ? "bg-info" : "bg-warning")">@q.Type</span></td>
                                <td class="text-center">@q.Mark</td>
                                <td>
                                    @if(q.Type == "MCQ")
                                    {
                                        <ul class="list-unstyled mb-0 small">
                                            @foreach(var c in q.Choices)
                                            {
                                                <li>â€¢ @c</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">True / False</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-lg btn-success">Confirm & Return to Dashboard</a>
            </div>
        </div>
    </div>
</div>
